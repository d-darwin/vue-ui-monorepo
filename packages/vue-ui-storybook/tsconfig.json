{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "arg-types/**/*.ts",
    "arg-types/**/*.tsx",
    "stories/**/*.ts",
    "stories/**/*.tsx",
    "@darwin-studio/button-ee/src/typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
